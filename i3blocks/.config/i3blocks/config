align=center
separator=false
color=#f8f8f2
separator_block_width=15
markup=pango

[gpu_stats]
command= radeontop --limit 1 --dump - | awk 'FNR==2 { gsub(/[A-Za-z%,]/, ""); printf "%3.0f<span color=\"#fb4934\">%]</span>\n", $5 }'
label=<span color="#fb4934"><b>GPU[</b></span>
interval=2
border=#fb4934
border_top=0
border_right=0
border_bottom=0
border_left=0

[cpu_stats]
command=sar -u 1 1 | awk 'FNR == 5 { printf "%3.0f<span color=\"#fb4934\">%]</span>\n", $3 }'
interval=2
label=<span color="#fb4934"><b>CPU[</b></span>
border=#fb4934
border_top=0
border_right=0
border_bottom=0
border_left=0

[memory]
command=free --mebi | awk 'FNR==2{ printf "%5.0f<span color=\"#fb4934\">M]</span>\n", $3 }'
interval=2
label=<span color="#fb4934">RAM[</span>
border=#fb4934
border_top=0
border_right=0
border_bottom=0
border_left=0

[swap]
command=free -m | awk 'NR>2{ printf "%5.0f<span color=\"#fb4934\">M]</span>\n", $3 }'
interval=2
label=<span color="#fb4934">SWP[</span>
border=#fb4934
border_top=0
border_right=0
border_bottom=0
border_left=0

[swap_free]
command=free -m | awk 'NR>2{ printf "%5.0f<span color=\"#fb4934\">M]</span>\n", $4 }'
interval=2
label=<span color="#fb4934">SWP_FREE[</span>
border=#fb4934
border_top=0
border_right=0
border_bottom=0
border_left=0


ufw(){
    ufwstatus=$(sudo sh -c ufw status | awk '{ print $2 }')
    if [ "$ufwstatus" = "active" ]; then
           echo -e "#[fg=#549665]ÔÄ£ #[default]"
    elif [ "$ufwstatus" = "inactive" ]; then
          echo -e "#[fg=#d75f5f]ÔÇú  #[default]"
    fi      
}

#VOLUME="$(amixer get Master | tail -1 | awk '{print substr($4, 2, length($4) - 3)}')"
MEMORY=$(free -m | awk '/Mem/ {printf "%d MB\n", $3}')
DATE_TIME=$(date +"ÔÅ≥ %A %d/%m")
CITY="Zadar" #doxxed
WEATHER=$(curl wttr.in/$CITY\?nonce=$RANDOM\&format=3 | awk -v OFS=' ' -v city=$CITY '{printf "Û∞ñê %s: %s", city, $3}')


echo -e "$(timer)#[default] \
$(usbmon)#[default] \
$(network)#[default] \
#[fg=colour96]$MEMORY#[default]  \
$DATE_TIME $(ufw) \
#[fg=#74b2ff]$WEATHER"
